##################################_COMPILATION_#################################
NAME	= serveur
CC		= clang
FLAG	= -Weverything
LFT		= ./libft/libft.a
SRCS	=	./source/source_server/main.c\
			./source/source_server/server.c\
			./source/error.c\
			./source/port.c

OBJS	= $(SRCS:.c=.o)

INCLUDE	= -I ./include \
		  -I ./libft
###########################_RELINK_MODIFY_.h####################################
RELINK = ./include/common.h ./include/client.h ./include/server.h
################################################################################

all: $(NAME)

$(NAME): $(OBJS)
	@make -s -C ./libft/
	@$(CC) $(FLAG) -o $(NAME) $(OBJS) $(LFT)
	@printf "✅  Compilation done. (serveur)\n"

%.o : %.c $(RELINK) ./Makefile
	@printf " ✅                                                              \r"
	@printf "✅  $(notdir $<)\r"
	@$(CC) -c $(FLAG) $< -o $@ $(INCLUDE)

clean:
	@printf "                                                               \r"
	@printf "✅  clean done ! (serveur)\n"
	@rm -f $(OBJS)
	@make -s clean -C ./libft/

fclean:
	@printf "                                                               \r"
	@printf "✅  fclean done ! (serveur)\n"
	@rm -f $(NAME) $(OBJS)
	@make -s fclean -C ./libft/

re: fclean all

